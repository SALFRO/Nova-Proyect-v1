import { useState } from 'react';
import { ShoppingCart, Check, Star } from 'lucide-react';
import { Button } from '@/components/ui/button';
import { Card, CardContent } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Tabs, TabsList, TabsTrigger } from '@/components/ui/tabs';
import { useCart } from '@/context/CartContext';
import type { Watch } from '@/types';

interface CatalogProps {
  watches: Watch[];
}

const brands = ['Todos', 'CURREN', 'GUESS'];

function formatPrice(price: number): string {
  return new Intl.NumberFormat('es-CO', {
    style: 'currency',
    currency: 'COP',
    minimumFractionDigits: 0,
  }).format(price);
}

export default function Catalog({ watches }: CatalogProps) {
  const [selectedBrand, setSelectedBrand] = useState('Todos');
  const { addToCart } = useCart();
  const [addedId, setAddedId] = useState<number | null>(null);

  const filteredWatches = selectedBrand === 'Todos'
    ? watches
    : watches.filter(watch => watch.brand === selectedBrand);

  const handleAddToCart = (watch: Watch) => {
    addToCart(watch);
    setAddedId(watch.id);
    setTimeout(() => setAddedId(null), 1500);
  };

  return (
    <section id="catalog" className="py-12 sm:py-20 bg-black">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Section Header */}
        <div className="text-center mb-8 sm:mb-12">
          <Badge className="bg-red-600/20 text-red-400 border-red-600/50 mb-3 sm:mb-4 text-xs sm:text-sm">
            Catálogo
          </Badge>
          <h2 className="text-2xl sm:text-4xl md:text-5xl font-bold text-white mb-3 sm:mb-4">
            Nuestra Colección
          </h2>
          <p className="text-gray-400 max-w-2xl mx-auto text-sm sm:text-base px-4">
            Descubre nuestra selección de relojes de las marcas más prestigiosas. 
            Cada pieza es una obra maestra de precisión y elegancia.
          </p>
        </div>

        {/* Brand Filter */}
        <div className="flex justify-center mb-6 sm:mb-10">
          <Tabs value={selectedBrand} onValueChange={setSelectedBrand}>
            <TabsList className="bg-gray-900 border border-gray-800">
              {brands.map((brand) => (
                <TabsTrigger
                  key={brand}
                  value={brand}
                  className="data-[state=active]:bg-red-600 data-[state=active]:text-white text-gray-400 text-xs sm:text-sm px-2 sm:px-4"
                >
                  {brand}
                </TabsTrigger>
              ))}
            </TabsList>
          </Tabs>
        </div>

        {/* Products Grid */}
        <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
          {filteredWatches.map((watch) => (
            <Card
              key={watch.id}
              className="bg-gray-900 border-gray-800 overflow-hidden group hover:border-red-600/50 transition-all duration-300"
            >
              {/* Image */}
              <div className="relative aspect-square overflow-hidden bg-gradient-to-b from-gray-800 to-gray-900">
                <img
                  src={watch.image}
                  alt={watch.name}
                  className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                {watch.originalPrice && (
                  <Badge className="absolute top-2 sm:top-3 left-2 sm:left-3 bg-red-600 text-white text-xs">
                    -{Math.round((1 - watch.price / watch.originalPrice) * 100)}%
                  </Badge>
                )}
                <div className="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                  <Button
                    onClick={() => handleAddToCart(watch)}
                    className={`${
                      addedId === watch.id
                        ? 'bg-green-600 hover:bg-green-700'
                        : 'bg-red-600 hover:bg-red-700'
                    } text-white rounded-full px-4 sm:px-6 text-sm sm:text-base`}
                  >
                    {addedId === watch.id ? (
                      <>
                        <Check className="w-4 h-4 mr-1 sm:mr-2" />
                        Agregado
                      </>
                    ) : (
                      <>
                        <ShoppingCart className="w-4 h-4 mr-1 sm:mr-2" />
                        Agregar
                      </>
                    )}
                  </Button>
                </div>
              </div>

              {/* Content */}
              <CardContent className="p-3 sm:p-5">
                <div className="flex items-center gap-0.5 sm:gap-1 mb-1 sm:mb-2">
                  {[...Array(5)].map((_, i) => (
                    <Star key={i} className="w-3 h-3 sm:w-4 sm:h-4 fill-yellow-500 text-yellow-500" />
                  ))}
                  <span className="text-gray-500 text-xs ml-1">(5.0)</span>
                </div>

                <h3 className="text-white font-semibold text-sm sm:text-lg mb-0.5 sm:mb-1 group-hover:text-red-500 transition-colors line-clamp-1">
                  {watch.name}
                </h3>
                <p className="text-gray-500 text-xs sm:text-sm mb-2 sm:mb-3">{watch.brand}</p>

                <div className="flex items-center gap-2 mb-2 sm:mb-3">
                  <span className="text-red-500 font-bold text-base sm:text-xl">
                    {formatPrice(watch.price)}
                  </span>
                  {watch.originalPrice && (
                    <span className="text-gray-500 line-through text-xs sm:text-sm">
                      {formatPrice(watch.originalPrice)}
                    </span>
                  )}
                </div>

                <div className="flex flex-wrap gap-1">
                  {watch.features.slice(0, 2).map((feature, idx) => (
                    <span
                      key={idx}
                      className="text-[10px] sm:text-xs bg-gray-800 text-gray-400 px-1.5 sm:px-2 py-0.5 sm:py-1 rounded"
                    >
                      {feature}
                    </span>
                  ))}
                </div>
              </CardContent>
            </Card>
          ))}
        </div>

        {filteredWatches.length === 0 && (
          <div className="text-center py-12">
            <p className="text-gray-500">No hay productos disponibles</p>
          </div>
        )}
      </div>
    </section>
  );
}
